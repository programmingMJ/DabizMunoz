<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <Button
        android:id="@+id/Dishes_button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/orange_button"
        android:fontFamily="sans-serif-condensed"
        android:text="Dishes"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toEndOf="@+id/Oval"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <Button
        android:id="@+id/Recipes_button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/orange_button"
        android:fontFamily="sans-serif-condensed"
        android:text="Recipes"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toEndOf="@+id/Oval"
        app:layout_constraintTop_toBottomOf="@+id/Dishes_button"
        app:layout_constraintVertical_bias="0.04000002" />

    <ImageView
        android:id="@+id/Oval"
        android:layout_width="151dp"
        android:layout_height="654dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/oval" />

    <ImageView
        android:id="@+id/xo_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/Oval"
        app:layout_constraintEnd_toEndOf="@+id/Oval"
        app:layout_constraintStart_toStartOf="@+id/Oval"
        app:layout_constraintTop_toTopOf="@+id/Oval"
        app:srcCompat="@drawable/imagen3_png" />

</androidx.constraintlayout.widget.ConstraintLayout>